<?xml version="1.0" encoding="UTF-8"?>
<resources>

<style name="Theme.NoTitleBar" parent="android:style/Theme.Light">
	<item name="android:windowNoTitle">true</item>
	<item name="android:windowContentOverlay">@null</item>
</style>

<style name="TextBody">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

<style name="TitleBarSpring">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
     
<style name="DashBoardButton">
	<item name="android:layout_gravity">center_vertical</item>
	<item name="android:layout_width">fill_parent</item>
	<item name="android:layout_height">wrap_content</item>
	<item name="android:layout_weight">1</item>
	<item name="android:gravity">center_horizontal</item>
	<item name="android:textStyle">normal</item>
	<item name="android:textSize">@dimen/text_size_medium</item>
	<item name="android:textColor">@color/foreground1</item>
	<item name="android:background">@null</item>
</style>

<style name="PreferenceBG">
    <item name="android:background">@color/background_preferences</item>
    <item name="android:textColor">@color/preferences_text</item>
</style>

</resources>